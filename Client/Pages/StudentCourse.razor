@page "/studentcourse"
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject IAppUserDtoClient appuserClient
@inject NavigationManager Navigation
@inject IXDtoClient xClient
@inject XLangStudent xstu
@inject XLangTeacher xtea
@inject XLangToast xtoa
@inject XNavMenu xnav
@attribute [Authorize]
@*Av Björn Lindqvist*@
@*Både studenter och lärare har åtkomst hit*@

<PageTitle>Student course</PageTitle>

<AuthorizeView Roles="Student, Teacher">
    <Authorized>
        <nav style="display: flex">
            <div style="width: 75%" title=@GetCourseTime(CourseDate)><h3>@loggeduser.FirstName, @xstu.TxtText[0] @* this is your course: *@
                <span class="verdanahead" style="background-color: rgb(@ColorR, @ColorG, @ColorB)"
                @onclick=" _ => InfoTitle(CourseDescription, 0)">@CourseName</span></h3>
            </div>
            <div style="margin: 0 auto 0 auto">
                @if (CourseH)
                {
                    <span> </span>
                }
                else
                {
                    <h5>@CourseDate</h5>
                }

            </div>
            <div style="margin: 0 0 0 auto">
                <button type="button" class="mb-1 text-white delbtn" @onclick="AddDeleteAvatar" title=@xstu.TxtTitle[0]>A</button>
                <button type="button" class="mb-1 text-white delbtn" @onclick="DeleteAllDocs" title=@xstu.TxtTitle[1]>E</button>
            </div>
        </nav><br />

        <div class="container"> @*Eventuella dokument som ingår läggs ut här*@
            <div class="d-flex flex-wrap">
                @foreach (var doc in documents)
                {
                    <ul class="nav">
                        @if (loggeduser.CourseId != 0 && doc.Id4Course == CourseId)
                        {
                            <li class="doclink">
                                <span @onclick=" _ => OpenFileControl(doc.NameIx, doc.DocName)" title=@xstu.TxtTitle[2]>@doc.DocName</span>
                                <span class="oi oi-file text-primary text-decoration-none docicon"
                                @onclick=" _ => DocUserControl(doc.Id, false)"></span>
                            </li>
                        }

                        @if (doc.UserId == loggeduser.Id && doc.DocName != "" && doc.Id4Course != -2 && doc.ActivityId == 0)
                        {
                            if (DateTime.Parse(doc.TimeStamp).AddDays(1) > DateTime.Now)
                            {
                                <li class="doclink" style="background-color:lavenderblush; box-shadow: 0 0 10px plum">
                                    <span @onclick=" _ => OpenFileControl(doc.NameIx, doc.DocName)" title=@xstu.TxtTitle[3]>@doc.DocName</span>
                                    <span class="oi oi-file text-primary text-decoration-none docicon"
                                    @onclick=" _ => DocUserControl(doc.Id, true)"></span>
                                </li>
                            }
                            else
                            {
                                <li class="doclink" style="background-color:lavenderblush">
                                    <span @onclick=" _ => OpenFileControl(doc.NameIx, doc.DocName)" title=@xstu.TxtTitle[3]>@doc.DocName</span>
                                    <span class="oi oi-file text-primary text-decoration-none docicon"
                                    @onclick=" _ => DocUserControl(doc.Id, true)"></span>
                                </li>
                            }
                        }

                        @if (doc.UserId == loggeduser.Id && doc.DocName == "" && doc.ActivityId == 0)
                        {
                            if (DateTime.Parse(doc.TimeStamp).AddDays(1) > DateTime.Now)
                            {
                                <li class="oi oi-file text-danger text-decoration-none docicon"
                                style="position: relative; top: 10px; margin-right: 22px; text-shadow: 0 0 10px plum"
                                @onmouseover=" _ => ShowMessControl(doc.Description, doc.Author, doc.TimeStamp)"
                                @onclick=" _ => DeleteMess(doc.Id)">
                                </li>
                            }
                            else
                            {
                                <li class="oi oi-file text-danger text-decoration-none docicon"
                                style="position: relative; top: 10px; margin-right: 22px"
                                @onmouseover=" _ => ShowMessControl(doc.Description, doc.Author, doc.TimeStamp)"
                                @onclick=" _ => DeleteMess(doc.Id)">
                                </li>
                            }
                        }
                    </ul>
                }
            </div>
        </div><br />

        <ToastDeleteMess @ref="deletemessRef" /> @*Delete-fönster*@
        <ToastDeleteAllDocUser @ref="deletealldocRef" /> @*Delete-fönster*@
        <ToastDocumentAdd @ref="docsaveRef" /> @*Filsparfönster*@
        <ToastDocumentUser @ref="docuserRef" /> @*Filmottagarefönster*@
        <ToastDocumentAvatar @ref="addavatarRef" /> @*Avatar-fönster*@

        @if (modules == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <EditForm Context="searchlmslexnet" Model="@modules" OnSubmit="OnInitializedAsync">
                <div class="input-group">
                    <InputText class="form-control" @bind-Value="searchString" placeholder="Module name" />
                    <div style="z-index: 0">
                        <button type="submit" class="btn btn-outline-dark">Search</button>
                    </div>
                    <div style="z-index: 0">
                        <button type="button" @onclick="GetCurrentModule" class="btn btn-outline-dark">Current</button>
                    </div>
                </div>
            </EditForm><br />

            @foreach (var data in modules)
            {
                if (IsTextMess)
                {
                    foreach (var mess in textmessage)
                    {
                        <div class="activity5S_box" style="padding-left: 22px; padding-bottom: 15px">
                            <b>@mess</b>
                        </div>
                    }
                    textmessage.Clear();
                    IsTextMess = false;
                }

                if (data.Select == 1 || data.Select == 10 || data.Select == 2 || data.Select == 20 || data.Select == 4 || data.Select == 5)
                {
                    if (data.StartDate < DateTime.Now && data.EndDate > DateTime.Now)
                    {
                        if (data.Select != 4 && data.Select != 5)
                        {
                            classModTopic = "moduleboxtopic";
                            classActTopic = "activityboxtopic";
                        }
                        else
                        {
                            classModTopic = "d-none";
                            if (data.Select == 5) classActTopic = "activity5S_box";
                            else classActTopic = "activity4S_box";
                        }
                    }
                    else
                    {
                        if (data.Select != 4 && data.Select != 5)
                        {
                            classModTopic = "modulebox";
                            classActTopic = "activitybox";
                        }
                        else
                        {
                            classModTopic = "d-none";
                            if (data.Select == 5) classActTopic = "activity5S_box";
                            else classActTopic = "activity4S_box";
                        }
                    }

                    <section class="@classModTopic">
                        <div style="display: flex">
                            <div style="width: 85%">
                                @if (data.Select == 1)
                                {
                                    <b>@xstu.TxtText[1] @data.Id: <u class="verdana" style="font-size: 0.97rem; cursor: pointer"
                                        @onclick=" _ => InfoTitle(data.Description, 0)">@data.Name</u></b>
                                }
                                else
                                {
                                    <b>@xstu.TxtText[1] <u class="verdana" style="font-size: 0.97rem; cursor: pointer"
                                        @onclick=" _ => InfoTitle(data.Description, 0)">@data.Name</u></b>
                                }
                            </div>
                            <div style="margin: 0 0 0 auto"><b>@XNavMenu.StartEndDate(data.StartDate, data.EndDate)</b></div>
                        </div>

                        <div style="display: flex; margin-top: 10px">
                            <div class="dropdoc">
                                <button type="button" id="M@(data.Id)" class="docviewbtn">DOCs</button>
                                <div class="dropdoc-content">
                                    @foreach (var doc in documents)
                                    {
                                        if (doc.ModuleId == data.Id && data.Select < 5)
                                        {
                                            if (doc.DocName != "")
                                            {
                                            // Öppnar filen samt visar dokumentets formulärdata.
                                                <a @onclick="_ => OpenFileControl(doc.NameIx, doc.DocName)"
                                                title="@doc.Description by @doc.Author @doc.TimeStamp"
                                                @onmouseover="_ => ShowInfoControl(doc.Description, doc.Author, doc.TimeStamp)">@doc.DocName</a>
                                            }
                                            else
                                            {
                                                <a @onmouseover="_ => ShowMessControl(doc.Description, doc.Author, doc.TimeStamp)"
                                                title="@doc.Description by @doc.Author @doc.TimeStamp">By @doc.Author</a>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </section>

                    <article class="@classActTopic">

                        <table class="table" style="color: #555"> @*Grå text*@
                            <thead>
                                @if (data.Select == 1 || data.Select == 10)
                                {
                                    <tr>
                                        <th>@xstu.TxtText[2]</th> @* Nr *@
                                        <th>@xstu.TxtText[3]</th> @* Activity *@
                                        <th>@xstu.TxtText[5]</th> @* Type *@
                                        <th>@xstu.TxtText[6]</th> @* Date *@
                                        <th>@xstu.TxtText[7]</th> @* Appendix *@
                                    </tr>
                                }

                                @if (data.Select == 2 || data.Select == 20)
                                {
                                    <tr>
                                        <th>@xstu.TxtText[3]</th> @* Activity *@
                                        <th>@xstu.TxtText[5]</th> @* Type *@
                                        <th>@xstu.TxtText[6]</th> @* Date *@
                                        <th>@xstu.TxtText[7]</th> @* Appendix *@
                                    </tr>
                                }

                                @if (data.Select == 4)
                                {
                                    <tr>
                                        <th>@xstu.TxtText[3]</th> @* Activity *@
                                        <th>@xstu.TxtText[4]</th> @* Description *@
                                        <th>@xstu.TxtText[7]</th> @* Appendix *@
                                    </tr>
                                }
                            </thead>
                            <tbody>
                                @foreach (var act in activities)
                                {
                                    if (act.Select > 0)
                                    {
                                        <tr>
                                            @if (act.ModuleId == data.Id)
                                            {
                                                if (data.Select == 1 || data.Select == 10)
                                                {
                                                    <td>@act.Id</td>
                                                }

                                                if (data.Select != 5)
                                                {
                                                    if (data.Select == 4)
                                                    {
                                                        stylePointer = "";
                                                    }
                                                    else
                                                    {
                                                        stylePointer = "cursor: pointer";
                                                    }

                                                    if (act.Name.IndexOf("#r#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#r#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><em style="@stylePointer color: crimson" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</em></td>
                                                        }
                                                        else
                                                        {
                                                            <td><b style="@stylePointer color: crimson" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</b></td>
                                                        }
                                                    }

                                                    if (act.Name.IndexOf("#m#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#m#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><em style="@stylePointer color: magenta" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</em></td>
                                                        }
                                                        else
                                                        {
                                                            <td><b style="@stylePointer color: magenta" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</b></td>
                                                        }
                                                    }

                                                    if (act.Name.IndexOf("#g#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#g#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><em style="@stylePointer color: darkgreen" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</em></td>
                                                        }
                                                        else
                                                        {
                                                            <td><b style="@stylePointer color: darkgreen" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</b></td>
                                                        }
                                                    }

                                                    if (act.Name.IndexOf("#b#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#b#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><em style="@stylePointer color: royalblue" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</em></td>
                                                        }
                                                        else
                                                        {
                                                            <td><b style="@stylePointer color: royalblue" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</b></td>
                                                        }
                                                    }

                                                    if (act.Name.IndexOf("#B#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#B#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><em style="@stylePointer color: black" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</em></td>
                                                        }
                                                        else
                                                        {
                                                            <td><span style="@stylePointer color: black" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</span></td>
                                                        }
                                                    }

                                                    if (act.Name.IndexOf("#BB#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#BB#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><em style="@stylePointer color: black" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</em></td>
                                                        }
                                                        else
                                                        {
                                                            <td><b style="@stylePointer color: black" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</b></td>
                                                        }
                                                    }

                                                    if (actStyleName == "")
                                                    {
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = act.Name;
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            <td><em style="@stylePointer" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</em></td>
                                                        }
                                                        else
                                                        {
                                                            actStyleName = act.Name;
                                                            actStyleName = actStyleName.Replace("#T#", "");
                                                            actStyleName = actStyleName.Replace("#Ti#", "");
                                                            actStyleName = actStyleName.Replace("#Tb#", "");
                                                            <td><span style="@stylePointer" @onclick=" _ => InfoTitle(act.Description, data.Select)">@actStyleName</span></td>
                                                        }
                                                    }
                                                    actStyleName = "";
                                                }

                                                if (data.Select != 4 && data.Select != 5)
                                                {
                                                    <td>
                                                        @foreach (var actype in activityTypes)
                                                        {
                                                            if (actype.Id == act.ActivityTypeId)
                                                            {
                                                                @actype.Name
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @* Datum visas om Select är 1 eller 10 *@
                                                        @if (act.Select == 1 || act.Select == 10)
                                                        {
                                                            @XNavMenu.StartEndDate(act.StartDate, act.EndDate)
                                                        }
                                                        else
                                                        {
                                                            <span>-</span>
                                                        }
                                                    </td>
                                                }
                                                else
                                                {
                                                    MarkupString markup = (MarkupString)act.Description;
                                                    // Är Auto Line Breaks av?
                                                    if (act.Description.IndexOf("#!ALB#") == -1)
                                                        markup = (MarkupString)act.Description.Replace("\n", "<br>");
                                                    else markup = (MarkupString)act.Description.Replace("#!ALB#", "");

                                                    if (data.Select == 5)
                                                    {
                                                        if (act.Name.IndexOf("#Tb#") != -1)
                                                        {
                                                            <td style="color: royalblue"><b>@markup</b></td>
                                                        }
                                                        else if (act.Name.IndexOf("#Ti#") != -1)
                                                        {
                                                            <td><b>@markup</b></td>
                                                        }
                                                        else
                                                        {
                                                            <td style="color: darkorange"><b>@markup</b></td>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <td>@markup</td>
                                                    }
                                                }

                                                if (data.Select != 5)
                                                {
                                                    <td>
                                                        @{
                                                            Empty = true;
                                                        }
                                                        <button type="button" class="docplusbtn" @onclick=" _ => DocSaveControl(act.Id, 40, act.Name)"
                                                        title=@xstu.TxtTitle[4]>+ DOC</button> @* Add a document or message to this activity *@
                                                        <div class="dropdoc">
                                                            <button type="button" id="A@(act.Id)" class="docviewbtn">DOCs</button>
                                                            <div class="dropdoc-content">
                                                                @foreach (var doc in documents)
                                                                {
                                                                    if (act.Select < 5 && ((doc.ActivityId == act.Id && doc.Id4Course < 0) ||
                                                                    (doc.ActivityId == act.Id && doc.UserId == loggeduser.Id)))
                                                                    {
                                                                        if (doc.DocName != "")
                                                                        {
                                                                        // Öppnar filen samt visar dokumentets formulärdata.
                                                                            <a @onclick="_ => OpenFileControl(doc.NameIx, doc.DocName)"
                                                                            title="@doc.Description by @doc.Author @doc.TimeStamp"
                                                                            @onmouseover="_ => ShowInfoControl(doc.Description, doc.Author, doc.TimeStamp)">@doc.DocName</a>
                                                                        }
                                                                        else
                                                                        {
                                                                            <a @onmouseover="_ => ShowMessControl(doc.Description, doc.Author, doc.TimeStamp)"
                                                                            title="@doc.Description by @doc.Author @doc.TimeStamp">By @doc.Author</a>
                                                                        }

                                                                        if (doc.ActivityId == act.Id && doc.UserId == loggeduser.Id) Empty = false;
                                                                    }
                                                                }
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @if (!Empty)
                                                        {
                                                            <span class="oi oi-aperture text-primary mt-1 text-decoration-none"></span>
                                                        }
                                                    </td>
                                                }
                                            }
                                        </tr>
                                    }

                                    if (data.Select != 5 && act.ModuleId == data.Id && act.Name.IndexOf("#T#") != -1)
                                    {
                                        string des = "<div style='color: darkorange'>" + act.Description + "</div>";
                                        if (act.Description.IndexOf("#!ALB#") == -1) // Är Auto Line Breaks av?
                                            des = des.Replace("\n", "<br>");
                                        else des = des.Replace("#!ALB#", "");

                                        textmessage.Add((MarkupString)des);
                                        IsTextMess = true;
                                    }

                                    if (data.Select != 5 && act.ModuleId == data.Id && act.Name.IndexOf("#Tb#") != -1)
                                    {
                                        string des = "<div style='color: royalblue'>" + act.Description + "</div>";
                                        if (act.Description.IndexOf("#!ALB#") == -1) // Är Auto Line Breaks av?
                                            des = des.Replace("\n", "<br>");
                                        else des = des.Replace("#!ALB#", "");

                                        textmessage.Add((MarkupString)des);
                                        IsTextMess = true;
                                    }

                                    if (data.Select != 5 && act.ModuleId == data.Id && act.Name.IndexOf("#Ti#") != -1)
                                    {
                                        string des = act.Description;
                                        if (act.Description.IndexOf("#!ALB#") == -1) // Är Auto Line Breaks av?
                                            des = des.Replace("\n", "<br>");
                                        else des = des.Replace("#!ALB#", "");

                                        textmessage.Add((MarkupString)des);
                                        IsTextMess = true;
                                    }
                                }
                            </tbody>
                        </table>

                    </article>
                }

                if (data.Select == 3)
                {
                    if (data.StartDate < DateTime.Now && data.EndDate > DateTime.Now) classMainTopic = "module3S_maintopic";
                    else classMainTopic = "module3S_main";

                    <main class="@classMainTopic">
                        <section class="module3S_box">
                            @if (data.Name.IndexOf("#E#") == -1 && data.Name.IndexOf("#H#") == -1)
                            {
                                <div class="verdana" style="font-size: 1.2rem"><b>@data.Name</b></div>
                            }

                            @if (data.Name.IndexOf("#E#") != -1)
                            {
                                <div>&nbsp;</div>
                            }

                            @if (data.Description.IndexOf("#E#") == -1 && data.Description.IndexOf("#H#") == -1)
                            {
                                <div class="verdana" style="font-size: 0.8rem; margin: 5px 0 10px 0; color: black">
                                    <b><em>@data.Description</em></b></div>
                            }

                            @if (data.Description.IndexOf("#E#") != -1)
                            {
                                <div>&nbsp;</div>
                            }
                        </section>

                        <article class="activity3S_box">

                            <table class="table" style="color: #555"> @*Grå text*@
                                <thead>
                                    <tr>
                                        <th>@xstu.TxtText[3]</th> @* Activity *@
                                        <th>@xstu.TxtText[5]</th> @* Type *@
                                        <th>@xstu.TxtText[6]</th> @* Date *@
                                        <th>@xstu.TxtText[7]</th> @* Appendix *@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var act in activities)
                                    {
                                        if (act.Select > 0)
                                        {
                                            <tr>
                                                @if (act.ModuleId == data.Id)
                                                {
                                                    if (data.Select == 1)
                                                    {
                                                        <td>@act.Id</td>
                                                    }

                                                    if (act.Name.IndexOf("#r#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#r#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><b style="cursor: pointer; color: crimson" @onclick=" _ => InfoTitle(act.Description, 0)"><em>@actStyleName</em></b></td>
                                                        }
                                                        else
                                                        {
                                                            <td><b style="cursor: pointer; color: crimson" @onclick=" _ => InfoTitle(act.Description, 0)">@actStyleName</b></td>
                                                        }
                                                    }

                                                    if (act.Name.IndexOf("#m#") != -1 && actStyleName == "")
                                                    {
                                                        actStyleName = act.Name;
                                                        actStyleName = actStyleName.Replace("#m#", "");
                                                        if (act.Name.IndexOf("#i#") != -1)
                                                        {
                                                            actStyleName = actStyleName.Replace("#i#", "");
                                                            actStyleName = actStyleName.Replace("i#", "");
                                                            actStyleName = actStyleName.Replace("#i", "");
                                                            <td><b style="cursor: pointer; color: magenta" @onclick=" _ => InfoTitle(act.Description, 0)"><em>@actStyleName</em></b></td>
                                                        }
