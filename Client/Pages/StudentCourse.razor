    private List<ModuleDto> OrderModules(List<ModuleDto> modules) // Sorterar moduler efter Morder.
    {
        int i = 0;
        int number = modules.Count;
        ModuleDto[] marray = new ModuleDto[number];

        do
        {
            // Lägger först in de som har fått ett ordernummer.
            foreach (var mod in modules)
            {
                if (mod.Morder == i + 1) marray[i] = mod;
            }
            i++;
        } while (i < number);

        i = 0;

        // Lägger in resterande utan något ordernummer.
        foreach (var mod in modules)
        {
            // Hoppar över de platser som är upptagna och stoppar dubletter.
            while (marray[i] is not null && i < number - 1) i++;
            if (mod.Morder == 0 || mod.Morder >= number) marray[i] = mod;
        }

        return marray.ToList();
    }

    private string GetCourseTime(string coursedate) // Returnerar kurstiden i dagar och veckor.
    {
        TimeSpan courseTime = new();
        string days = string.Empty;
        decimal weeks = 0;

        // Kurstid ex: "2023-01-01 | 2023-12-31"
        if (coursedate.Length == 23)
        {
            DateTime startDate = DateTime.Parse(coursedate.Substring(0, 10));
            DateTime endDate = DateTime.Parse(coursedate.Substring(13, 10));
            courseTime = endDate - startDate;

            days = courseTime.Days.ToString();
            weeks = Math.Round(((decimal)courseTime.Days / 7), 1);
        }

        if (CourseH) return "";
        else return days + xstu.TxtTitle[12] + weeks.ToString() + xstu.TxtTitle[13];
    }

