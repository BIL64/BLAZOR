@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager Navigation
@inject IAuthorizationService AuthorizationService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">LexiconLMSBlazor</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @if (Navstatic.Logintype != "") // Statisk sträng.
        {
            <div style="text-align: center; padding: 20px; color: white">
                @Navstatic.Logintype
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="@Navstatic.Homeclass" aria-hidden="true"></span> Refresh
            </NavLink>
        </div>
        @if (Navstatic.Navbtn1 != "") // Statisk sträng 1.
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@Navstatic.Navlink1">
                    <span aria-hidden="true"></span>@Navstatic.Navbtn1
                </NavLink>
            </div>
        }
        @if (Navstatic.Navbtn2 != "") // Statisk sträng 2.
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@Navstatic.Navlink2">
                    <span aria-hidden="true"></span>@Navstatic.Navbtn2
                </NavLink>
            </div>
        }
        @if (Navstatic.Navbtn3 != "") // Statisk sträng 3.
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@Navstatic.Navlink3">
                    <span aria-hidden="true"></span>@Navstatic.Navbtn3
                </NavLink>
            </div>
        }
        @if (Navstatic.Navbtn4 != "") // Statisk sträng 4.
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@Navstatic.Navlink4">
                    <span aria-hidden="true"></span>@Navstatic.Navbtn4
                </NavLink>
            </div>
        }
        @if (Navstatic.Navbtn5 != "") // Statisk sträng 5 (reserv).
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@Navstatic.Navlink5">
                    <span aria-hidden="true"></span>@Navstatic.Navbtn5
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private async Task ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        await Navlogin();
    }

    [CascadingParameter]
    private Task<AuthenticationState>? authenticationState { get; set; } // Tillhör autentiseringen.

    private async Task Navlogin() // Autentisering.
    {
        if (authenticationState is not null)
        {
            var authState = await authenticationState;
            var user = authState?.User;

            if (user is not null && user.Identity is not null && user.Identity.IsAuthenticated)
            {
                if (user.IsInRole("Student")) // Den inloggade är en student.
                {
                    Navstatic.Logintype = "S T U D E N T";
                    Navstatic.Homeclass = "";
                    Navstatic.Navbtn1 = "Course";
                    Navstatic.Navlink1 = "studentfetch";
                    Navstatic.Navbtn2 = "Students";
                    Navstatic.Navlink2 = "studentall";
                    Navstatic.Navbtn3 = "";
                    Navstatic.Navlink3 = "";
                    Navstatic.Navbtn4 = "";
                    Navstatic.Navlink4 = "";
                    base.StateHasChanged();
                }

                if (user.IsInRole("Teacher")) // Den inloggade är en lärare.
                {
                    Navstatic.Logintype = "T E A C H E R";
                    Navstatic.Homeclass = "";
                    Navstatic.Navbtn1 = "All courses";
                    Navstatic.Navlink1 = "teacherfetch";
                    Navstatic.Navbtn2 = "Add course";
                    Navstatic.Navlink2 = "teacheraddcourse";
                    Navstatic.Navbtn3 = "All teachers";
                    Navstatic.Navlink3 = "teacherallteachers";
                    Navstatic.Navbtn4 = "All students";
                    Navstatic.Navlink4 = "teacherallstudents";
                    base.StateHasChanged();
                }
            }
        }
    }
}
